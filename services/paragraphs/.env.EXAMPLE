# Copy to .env and update as needed for your environment

# Runtime environment (development, staging, production)
ENVIRONMENT=development

# AWS Configuration for DynamoDB, S3, and SQS (LocalStack defaults)
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# S3 Buckets
SUBMISSIONS_BUCKET=esl-course-boost-submissions-dev
PARAGRAPHS_BUCKET=esl-course-boost-paragraphs-dev

# Google Cloud Document AI
GCP_PROJECT_ID=my-gcp-project
GCP_LOCATION=us
GCP_LAYOUT_PARSER_PROCESSOR_ID=00000000000000000000

## Google Cloud credentials

# Use this env if you have saved your GCP credentials to a local file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Use this env if you need to read the GCP credentials (JSON) from an AWS secret / env var
# GCP_DOCUMENTAI_CREDENTIALS=
